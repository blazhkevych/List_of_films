<?xml version="1.0" encoding="utf-8"?>
<!-- The root element of the AndroidManifest.xml file.
It must contain an <application> element and specify xmlns:android and xmlns:tools attributes. -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- The application element represents the application and contains all its components. -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.List_of_films"
        tools:targetApi="31">
        <!-- The activity element represents an activity that must be defined in the AndroidManifest.xml file. -->
        <activity
            android:name=".FilmsActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <!-- The intent-filter element specifies the types of intents that an activity, service, or broadcast receiver can respond to. -->
            <intent-filter>
                <!-- The action element specifies an action that can be performed on an item. -->
                <action android:name="android.intent.action.MAIN" />
                <!-- The category element specifies additional information about the activity to which it's attached. -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>